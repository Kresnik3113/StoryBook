@model IEnumerable<StoryBook.Models.Location>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (@Html.BeginForm("IndexSearch", "Locations", FormMethod.Get))
    {
        <b>Search By:</b>
        @Html.RadioButton("searchBy", "LocationName", true) <text>LocationName</text>
        @Html.RadioButton("searchBy", "LocationType") <text>LocationType</text>
        @Html.RadioButton("searchBy", "LocationDescription") <text>LocationDescription</text>
        <br />
        @Html.TextBox("search") <input type="submit" value="search" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocationType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocationDescription)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4">
                No records match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationDescription)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LocationId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationId })
                </td>
            </tr>
        }
    }
    </table>
